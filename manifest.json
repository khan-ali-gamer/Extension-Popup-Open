{
    "manifest_version": 2,
    "name": "Popup Open",
    "version": "1.0",
    "description": "This extension opens google search links in a popup wiew on the same page!",
    "permissions": ["tabs","<all_urls>","http://*/","https://*/","activeTab","declarativeContent", "storage"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "get_started16.png",
        "32": "get_started32.png",
        "128": "get_started128.png"
      }
    },
    "icons": {
      "16": "get_started16.png",
      "32": "get_started32.png",
      "128": "get_started128.png"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"],
      "css":["mycss.css"]
    }
  ]
}
